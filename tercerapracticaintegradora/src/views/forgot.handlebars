<div class="login-container">
  <form id="forgot-form" class="login-form">
    <h2>Recupera tu contraseña</h2>
    <div class="form-group">

      <label for="username" >Usuario:</label>
      <input type="text" id="username" placeholder="Ingresa tu usuario" name="username" required />
    </div>
    <div class="form-group">

      <label for="newPassword">Nueva Contraseña:</label>
      <input type="password" id="newPassword" placeholder="Escribi la nueva contraseña" name="newPassword" required />

      <label for="newTwoPassword">Valida su Contraseña:</label>
      <input
        type="password"
        id="newTwoPassword"
        name="newTwoPassword"
        placeholder="Repeti la nueva contraseña"
        required
      />
    </div>
    <button id="forgot" class="boton" type="submit" href="/">Cambiar contraseña</button>
  </form>
</div>
<script src="js/forgot.js"></script>
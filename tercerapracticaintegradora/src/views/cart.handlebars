<div class="contenedor-principal">
  <h1>Carritos de Compras</h1>

  <div class="row">
  
      
        <div class="cart-container">
          <div class="cart-detail">
            <h2 class="card-title">Carrito {{_id}}</h2>
            
           
              {{#each products}}
                <ul> 
                    <li class="list-group-item">
                    <h5 class="card-subtitle  text-muted">Producto: {{this.name}}</h5>
                    <p class="card-text">Nombre: {{this.name}}</p>
                    <p class="card-text">Precio: ${{this.price}}</p>
                    <p class="card-text">Cantidad: {{this.stock}}</p>
                    </li>
                 </ul>
              {{/each}}

           
            <h2 class="card-title">Total ${{this.total}}</h2>
            <button type="button" class="button-scd  button-finish-purchase"  id="{{this._id}}"> Finalizar proceso de compra</button>

            {{#unless this.products.length}}
              <p class="mt-3">Este carrito está vacío</p>
            {{/unless}}
          </div>
        </div>
      

  </div>
</div>


 <script src="/js/purchase.js"></script>
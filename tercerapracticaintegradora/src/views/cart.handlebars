<div class="contenedor-principal">
  <h1>Carritos de Compras</h1>
  <h2 class="card-title">N°{{cart._id}}</h2>
  <div class="cart-container">
    
        <div>
          <div class="cart-detail">       
               {{#each cart.products}}
              <ul>
                <li class="cart-list">
                  <h5 class="card-title">{{this.description}}</h5>
                  <p class="card-text">Nombre: {{this.name}}</p>
                  <p class="card-text">Precio: {{this.price}}</p>
                  <p class="card-text">
                  Cantidad: <span class="product-quantity" id="{{this.quantity}}">{{this.quantity}}</span>
                  </p>
                  <!-- Botones para aumentar y disminuir cantidad -->
                  <button
                    type="button"
                    class="button-scd button-decrease-quantity"
                    id="{{this._id}}"
                    data-cart-id="{{../cart._id}}"
                  >
                    -
                  </button>
                  <button
                    type="button"
                    class="button-scd button-increase-quantity"
                    id="{{this._id}}"
                    data-cart-id="{{../cart._id}}"
                  >
                    +
                  </button>
                  <!-- Botón para eliminar un producto del carrito -->
                  <button
                    type="button"
                    class="button-scd button-remove-product"
                    id="{{this._id}}"
                    data-cart-id="{{../cart._id}}" 
                  > Eliminar Producto</button>
                </li>
              </ul>
            {{/each}}
              <div class="card-body">
          <!-- Botón para finalizar proceso de compra -->
          {{#unless isEmptyCart}}
            <button type="button" 
            class="button-scd button-finish-purchase" 
            id="{{cart._id}}">Finalizar proceso de compra</button>
          {{/unless}}                    

          <!-- Botón para vaciar todo el carrito -->
          {{#unless isEmptyCart}}
          <button
            type="button"
            class="button-scd"
            id="{{cart._id}}"
          > Vaciar Carrito</button>
          {{/unless}}
        </div>

           
            <!-- Total del carrito -->
           <h2 class="card-title">Total {{cart.total}}</h2>
           <a type="button" class="button-scd"   href="/api/products">Volver a ver a la tienda</a>
          

            {{#if isEmptyCart}}
            <p class="mt-3">Este carrito está vacío</p>
           {{/if}}
          </div>
        </div>
      

  </div>
</div>
 

 <script src="/js/purchase.js"></script>
 <script src="/js/cart.js"></script>
    <!-- Formulario para actualizar un producto -->
     <form id="updateProductForm" method="POST">
        
        <label for="name">Nombre:</label>
        <input type="text" id="name"  name="name" placeholder={{this.name}}  required><br>
        
        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" placeholder={{this.category}} required><br>
        
        <label for="description">Descripción:</label><br>
        <textarea type="text" id="description" name="description" placeholder={{this.description}} required></textarea><br>

        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" step="0.01" placeholder={{this.price}} required><br>
       
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" placeholder={{this.stock}} required><br>

        <label for="thumbnail">URL:</label>
        <input type="text" id="thumbnail" name="thumbnail" placeholder={{this.thumbnail}} required><br>
      
        <button type="submit" class="button-scd button-update-product" id="{{this._id}}" >Actualizar producto</button>
   
    </form>

</div>

<script src="/js/update-one-product.js"></script>


<div>
    <div>        
        <ul> 
                <li class="cart-list">
                <strong>Nombre:{{product.name}}</strong> <br>
                <strong>Descripción:</strong>{{description}} <br>
                <strong>Precio: $</strong>{{price}} <br>
                <strong>Categoría:</strong>{{this.category}} <br>
                <strong>Disponibilidad:</strong>{{stock}} <br>
            </li>
            
        </ul>
    
    </div>
   
   
    <!-- Formulario para actualizar un producto -->
     <form id="updateProductForm" method="POST">
        
        <label for="name">Nombre:</label>
        <input type="text" id="name"  name="name" value="{{this._id}}" required><br>
        
        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" required><br>
        
        <label for="description">Descripción:</label><br>
        <textarea type="text" id="description" name="description" required></textarea><br>

        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" step="0.01" required><br>
       
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" required><br>

        <label for="thumbnail">URL:</label>
        <input type="text" id="thumbnail" name="thumbnail" required><br>
      
        <button type="submit" class="button-scd button-update-product" id="{{this._id}}" >Actualizar producto</button>
   
    </form>

</div>

<script src="/js/updateoneproduct.js"></script>
